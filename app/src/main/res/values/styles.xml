<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="alertDialogTheme">@style/GreenAlertDialogStyle</item>
        <item name="dialogTheme">@style/GreenAlertDialogStyle</item>
        <item name="android:alertDialogTheme">@style/GreenAlertDialogStyle</item>
    </style>

    <style name="AppBarOverlayStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="PopupOverlayStyle" parent="ThemeOverlay.AppCompat" />

    <style name="GreenAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/background_transparent</item>
        <item name="background">@color/background_transparent</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
