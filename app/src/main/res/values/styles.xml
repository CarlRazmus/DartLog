<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="alertDialogTheme">@style/GreenAlertDialogStyle</item>
        <item name="android:editTextStyle">@style/GreenEditTextStyle</item>
    </style>

    <style name="AppBarOverlayStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="PopupOverlayStyle" parent="ThemeOverlay.AppCompat" />

    <style name="GreenEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/green_win</item>
        <item name="colorControlActivated">@color/green_win</item>
        <item name="colorControlHighlight">@color/green_win</item>
    </style>

    <style name="GreenAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background_transparent</item>
        <item name="android:colorAccent">@color/green_win</item>
        <item name="android:textColorHint">@color/green_win</item>
    </style>

</resources>
