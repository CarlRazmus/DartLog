<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/game_player_list_item"
    android:orientation="vertical"
    android:background="@color/main_white"
    android:padding="8dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/list_item">

        <TextView
            android:id="@+id/game_player_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_1"
            android:textSize="20sp"
            android:textColor="@color/background_dark"/>

        <TextView
            android:id="@+id/total_score_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/background_dark"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textSize="15sp"
            tools:text="250 180 112 73 32 32"
            android:requiresFadingEdge="horizontal"
            android:fadingEdgeLength="100dp"
            android:ellipsize="none"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/game_player_list_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="32"
            android:textSize="20sp"
            android:textColor="@color/background_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/checkout_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/checkout"
            android:layout_marginEnd="5dp"
            android:textColor="@color/background_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkout_label"
            android:textColor="@color/background_dark"
            android:textSize="15sp"
            tools:text="D9"
            android:typeface="monospace" />

    </RelativeLayout>
</LinearLayout>
