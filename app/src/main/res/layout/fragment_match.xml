<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:clipToPadding="false"
    android:background="@drawable/background"
    tools:context="com.fraz.dartlog.statistics.MatchFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/player_match_statistics_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white"
            android:columnCount="2"
            android:rowCount="3"
            android:padding="16dp">

            <TextView
                android:id="@+id/match_game_type"
                tools:text="X01"
                android:textSize="32sp"
                android:layout_column="1"
                android:layout_rowSpan="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:textColor="@color/light_grey"/>

            <TextView
                android:id="@+id/match_winner_label"
                android:text="@string/winner"
                android:textSize="12sp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/accent"/>

            <TextView
                android:id="@+id/match_winner"
                tools:text="Razmus"
                android:textSize="24sp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_grey"/>

            <TextView
                android:id="@+id/match_date"
                tools:text="Monday 11:45, 10 Oct 2017"
                android:textSize="12sp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:textStyle="italic"
                android:textColor="@color/main_grey"/>
        </GridLayout>

        <com.fraz.dartlog.statistics.MatchChartView
            android:id="@+id/match_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <com.fraz.dartlog.statistics.MatchTableView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/match_table"
            android:layout_marginTop="8dp"/>

        <com.fraz.dartlog.statistics.ScoreChartView
            android:id="@+id/score_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>