<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/light_grey"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:id="@+id/player_match_statistics">

    <RelativeLayout
        android:id="@+id/player_match_statistics_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@drawable/list_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_statistics_game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="X01"
            android:padding="8dp"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/match_statistics_game_date"
            android:background="@color/main_white"
            android:textColor="@color/main_grey"/>

        <TextView
            android:id="@id/match_statistics_game_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2016-10-24"
            android:padding="8dp"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_alignBottom="@id/match_statistics_game_type"
            android:layout_alignTop="@id/match_statistics_game_type"
            android:background="@color/main_white"
            android:gravity="center"
            android:textColor="@color/main_grey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match_statistics_scoreboard_header"
            android:layout_below="@id/match_statistics_game_type"
            android:background="@color/main_white"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical">

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/match_statistics_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/match_statistics_scoreboard_header"
            android:layout_alignTop="@id/match_statistics_scoreboard_header"
            android:layout_alignBottom="@id/match_statistics_scoreboard_header"
            android:nestedScrollingEnabled="false"
            android:background="@color/main_white"
            tools:listitem="@layout/match_statistics_scoreboard_list_item"
            android:fadingEdgeLength="50dp"
            android:requiresFadingEdge="horizontal"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
