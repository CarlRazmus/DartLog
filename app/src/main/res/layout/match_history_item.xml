<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_match_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="1dp"
    android:background="@color/main_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/match_history_players"
        android:textSize="12sp"
        android:textColor="@color/light_grey"
        android:layout_below="@+id/match_history_game_type"
        tools:text="5 players"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/match_history_game_type"
        android:textSize="20sp"
        android:textColor="@color/main_grey"
        android:gravity="center"
        tools:text="X01"/>

    <TextView
        android:id="@+id/match_history_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignBottom="@id/match_history_players"
        android:layout_alignTop="@id/match_history_game_type"
        tools:textColor="@color/accent"
        tools:text="WIN"/>

    <TextView
        android:id="@+id/match_history_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/match_history_players"
        android:layout_alignTop="@id/match_history_game_type"
        android:gravity="center"
        android:background="@color/main_white"
        android:textColor="@color/main_grey"
        tools:text="2016-10-24"/>
</RelativeLayout>